<h2>Sign into your account</h2>

<%= form_tag login_path do %>
<div class="form-group">
<%= label_tag :email%>
<%= email_field_tag :email, nil, :class => 'form-control', :id => 'exampleInputEmail1' %>
</div>
<div class="form-group">
<%= label_tag :password %>
<%= password_field_tag :password, nil, :class => 'form-control', :id => 'exampleInputEmail1' %>
</div>

<%= submit_tag "Sign in", :class => 'btn btn-primary' %>

<% if flash[:error_message].present? %>
  <p><%= flash[:error_message] %></p>

<% end %>

<% end %>
