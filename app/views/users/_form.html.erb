<%= form_for @user do |f| %>

<%= f.label :name %>
<%= f.text_field :name, :required => true %>

<%= f.label :username %>
<%= f.text_field :username, :require => true  %>

<%= f.label :email %>
<%= f.email_field :email, :required => true %>

<%= f.label :image %>
<%= f.text_field :image %>

<%= f.label :bio %>
<%= f.text_area :bio %>

<%= f.label :password %>
<%= f.password_field :password, :required => true %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, :required => true %>

<%= f.submit "Sign Up!" %>

<% end %>
