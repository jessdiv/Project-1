<!-- Display user profile info -->
<div class="container">
  <div class="row">
    <div class="col-sm">
    <h2><%= @user.username %></h2>
    <h3><%= @user.suburb %> <%= @user.city %></h3>
    <% if @user.image.present? %>
    <img src="<%= @user.image %>" alt="" class="avatar">
    <% end %>
    <p><%= @user.bio %></p>
    </div>

<!-- Display items associated with the user -->
    <div class="col-sm">
    <% if @current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user.id) %>
    <h3>My items</h3>
    <% else %>
    <h3>Items by this user</h3>
    <% end %>

    <% @user.items.each do |item| %>
    <h4><%= item.name %></h4>
    <p><%= link_to (image_tag item.image, :class => 'thumb'), item_path(item)%></p>
    <% end %>
    </div>
<!-- Display orders associated with a user -->
    <div class="col-sm">
    <% if @current_user == @user && @current_user.orders.present? %>

    <h3><%= link_to 'My Orders', orders_path %></h3>
    <% @current_user.orders.each do |order| %>
    <p><%= order.id %>. Start: <%= order.start%></p>
    <p>End: <%= order.end%></p>
    <% order.items.each do |item| %>
    <%= item.name %></p>
    <% end %>

    <% end %>
    <% end %>
    </div>
</div>
</div>
