<!-- Display user profile info -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><%= @user.username %></h2>
        <h3><%= @user.suburb %>, <%= @user.city %></h3>
        </div>

      </div>
    <div class="row">
      <div class="col-md-12">
        <% if @user.image.present? %>
        <%= cl_image_tag @user.image, :class => 'avatar' %>
        <% end %>
      </div>
        </div>
    <div class="row">
      <div class="col-md-4"></div>

    <div class="col-md-4">
    <p><%= @user.bio %></p>
    </div>

    <div class="col-md-4"></div>
    </div>
<!-- Display items associated with the user -->

    <% if @current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user.id) %>
  </div>
    <% end %>
