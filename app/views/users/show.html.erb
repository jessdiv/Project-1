<!-- Display user profile info -->
  <div class="container">
    <h2><%= @user.username %></h2>
    <h3><%= @user.suburb %> <%= @user.city %></h3>
    <% if @user.image.present? %>
    <img src="<%= @user.image %>" alt="" class="avatar">
    <% end %>
    <p><%= @user.bio %></p>

<!-- Display items associated with the user -->

    <% if @current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user.id) %>
</div>
<div class="container">
    <h3>My items</h3>
    <% else %>
    <h3>Items by this user</h3>
    <% end %>
  <div class="row">
    <% @user.items.each do |item| %>
    <div class="col-md-3">
    <h4><%= item.name %></h4>
    <p><%= link_to (image_tag item.image, :class => 'thumb'), item_path(item)%></p>
    </div>
    <% end %>
  </div>
  </div>
<!-- Display orders associated with a user -->
<% if !@current_user.orders.last.start.present? %>
  <p> Make your first order by adding something to your cart. </p>
<% elsif %>
    <% @current_user == @user%>
<div class="container">
    <h3><%= link_to 'My Orders', orders_path %></h3>
    <div class="row">
    <% @current_user.orders.each do |order| %>
    <div class="col-md-3 item-box">
    <p><%= order.id %>. Start: <%= order.start%></p>
    <p>End: <%= order.end%></p>
    <% order.items.each do |item| %>
    <p><%= item.name %></p>
    <% end %>
    </div>

    <% end %>
    <% end %>
    </div>
</div>
