<!-- Display user profile info -->

<h2><%= @user.username %></h2>
<h3><%= @user.suburb %>, <%= @user.city %></h3>
<% if @user.image.present? %>
<img src="<%= @user.image %>" alt="" class="avatar">
<% end %>
<p><%= @user.bio %></p>

<%= link_to 'Edit Profile', edit_user_path(@user.id) %>

<!-- Display items associated with the user -->

<% if @current_user == @user %>
<h3>My items</h3>
<% else %>
<h3>Other items by this user</h3>
<% end %>

<% @current_user.items.each do |item| %>
<h4><%= item.name %></h4>
<p><%= image_tag item.image, :class => 'thumb' %></p>
<% end %>
