<h1>Make an order</h1>

<%= form_for @order do |f| %>

<%= f.label :start, 'Start date: ' %>
<%= f.date_field :start, :required => true %>

<%= f.label :end, 'Drop off date: ' %>
<%= f.date_field :end, :required => true %>

<%= hidden_field_tag :item_id, params[:item_id] %>

<%= f.submit 'Submit order'%>

<% end %>
