<%= form_for(@item, :html => {:multipart =>true}) do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :brand %>
  <%= f.text_field :brand, :required => true, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :dayprice %>
  <%= f.text_field :dayprice, :require => true, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :weekprice %>
  <%= f.text_field :weekprice, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= f.label :monthprice %>
  <%= f.text_field :monthprice, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, :required => true, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= f.label "Image of item: " %>
  <%= f.cl_image_upload :image, :required => true, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :category_id %>
  <%= f.select :category_ids, Category.pluck(:name, :id), :include_blank => 'Please select', :multiple => true, :size => 5, :class => 'form-control' %>
</div>

<%= f.submit "Add", :class => 'btn btn-lg btn-light' %>

<% end %>
