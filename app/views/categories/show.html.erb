
<h3>Browse</h3>
<div class="col-md-12">

  <%= link_to 'All Categories', categories_path %>

  <% @categories.each do |category| %>

  <%= link_to category.name, category_path(category.id)%> |
  <% end %>

<h2><%= @category.name %></h2>

<div class="container">

  <div class="row">
    <% @category.items.each do |i| %>

      <div class="col-md-4 item-box">
        <h3><%= i.name %></h3>
        <a href="<%= item_path(i) %>"><img src="<%= i.image %>" alt="edit" class="thumb "></a>
        </div>
        <% end %>

  </div>

</div>
